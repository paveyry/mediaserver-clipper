<body>
<main class="container">
    <dialog open>
        <article>
            <header>
                <a href="/" aria-label="Close" rel="prev"></a>
                <p>
                    {{#if errors}}
                        <strong>ü•∫ Oops!</strong>
                    {{else}}
                        <strong>üòÅ Yay!</strong>
                    {{/if}}
                </p>
            </header>
            {{#if message}}
                <p>{{message}}</p>
            {{/if}}
            <ul>
                {{#each errors}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </article>
    </dialog>
</main>
</body>
</html>